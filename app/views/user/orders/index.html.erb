<h1>Your Orders</h1>

<section class="grid-container">
  <% @orders.each do |order| %>
    <section class="grid-item" id="order-<%= order.id %>">
      <h4><%= link_to "Order: #{order.id}", "/profile/orders/#{order.id}" %></h4>
      <p>Created at: <%= order.created_at %></p>
      <p>Last updated: <%= order.updated_at %></p>
      <p>Total items: <%= order.quantity_ordered %></p>
      <p>Total price: <%= number_to_currency(order.grandtotal/100.to_f) %></p>
      <h4>Order status: <%= order.status %></h4>
    </section>
  <% end %>
</section>