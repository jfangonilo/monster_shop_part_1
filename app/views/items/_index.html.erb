<% if @merchant %>
  <h1><%= link_to @merchant.name, "/merchants/#{@merchant.id}"%><span> Items</span></h1>
  <p align="center"><%= link_to "Add New Item", new_merchant_dash_item_path if current_merchant_user? && current_employee?(@merchant.id) %></p>
<% else %>
  <h1>All Items</h1>
<% end %>
  <% @items.reload %>

<section class="grid-container">
  <% @items.each do |item| %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <%= link_to image_tag(item.image), "/items/#{item.id}", id: "#{item.id}-image" %>
      <p> <%= item.description unless @merchant%> </p>
      <p>Price: <%=number_to_currency(item.price/100.to_f) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <% if item.active? %>

        <p>Active</p>
        <%= link_to "Deactivate", "/merchant/items/#{item.id}", method: :put if current_merchant_user? && current_employee?(@merchant.id) %>
      <% else %>

        <p>Inactive</p>
        <%= link_to "Activate", "/merchant/items/#{item.id}", method: :put if current_merchant_user? && current_employee?(@merchant.id) %>
      <% end %>

      <% if current_merchant_user? && current_employee?(@merchant.id) %>
          <p><%= link_to "Delete Item", merchant_dash_item_path(item), method: :delete if item.no_orders? %></p>
          <p><%= link_to "Edit Item", edit_merchant_dash_item_path(item) %> </p>
      <%end %>
    </section>
  <% end %>
</section>

<h2>Most Popular Items </h2>
<section class="grid-container" id="top_five">
  <% @items.by_popularity(5, "DESC").each do |item| %>
    <section class="grid-item">
      <p>Item Name: <%=item.name %></p>
      <p>Quantity: <%= item.quantity %></p>
    </section>
  <%end %>
</section>

<h2>Least Popular Items</h2>
<section class="grid-container" id= "bottom_five">
  <% @items.by_popularity(5, "ASC").each do |item| %>
    <section class="grid-item">
      <p>Item Name: <%= item.name %></p>
      <p>Quantity: <%= item.quantity %></p>
    </section>
  <%end %>
</section>
